{
  "kind": "collectionType",
  "collectionName": "miran_tools",
  "info": {
    "singularName": "miran-tool",
    "pluralName": "miran-tools",
    "displayName": "Miran Tool"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "img": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "excerpt": {
      "type": "text",
      "required": true
    },
    "issue_number": {
      "type": "string",
      "required": true
    },
    "pdf": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "files"
      ]
    },
    "download_count": {
      "type": "biginteger"
    },
    "issue_date": {
      "type": "string",
      "required": true
    },
    "tool_like": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::tool-like.tool-like",
      "inversedBy": "tool"
    },
    "tool_cover": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
        "sections": {
      "type": "component",
      "component": "sections.section-items",
      "repeatable": true
    },
    "pdf_file": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::pdf-file.pdf-file"
    }
  }
}
